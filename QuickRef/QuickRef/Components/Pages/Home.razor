@page "/"
<PageTitle>QuickRef</PageTitle>
<MatDrawerContainer Class="drawer-menu">
    <MatDrawer @bind-Opened="@_drawerOpen">
        <MatSlideToggle Class="edit-mode-toggle" Label="Edit Mode" @bind-Value="@_editMode"></MatSlideToggle>
    </MatDrawer>
    <MatDrawerContent>
        <MatIconButton Class="menu-button" @bind-Toggled="@_drawerOpen">
            @if (_drawerOpen)
            {
                <i class="material-symbols-outlined">
                    close
                </i>
            }
            else
            {
                <i class="material-symbols-outlined">
                    menu
                </i>
            }
        </MatIconButton>
        <QuickRef.Components.Quickref.NoteView Notes="@([new("Note1", "Hello World"), new("Note2", "Hello World"), new("Note3", "Hello World")])" EditMode="@_editMode" />
    </MatDrawerContent>
</MatDrawerContainer>

@code{
    private bool _drawerOpen = false;
    private bool _editMode = false;
}
